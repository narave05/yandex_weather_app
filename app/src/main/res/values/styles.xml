<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewTemp">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_64</item>
        <item name="android:paddingTop">@dimen/padding_8</item>
    </style>

    <style name="TextViewForecast">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_28</item>
        <item name="android:padding">@dimen/padding_8</item>
    </style>
    <style name="TvSpeech">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/padding_16</item>
        <item name="android:textSize">@dimen/text_size_28</item>
    </style>

    <style name="TvWind">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:paddingLeft">@dimen/padding_8</item>
    </style>

    <style name="ButtonSwipe">
        <item name="android:text">@string/cancel</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>
