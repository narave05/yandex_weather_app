<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_we"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_city"
        android:weightSum="10">

        <RelativeLayout
            android:id="@+id/relative_collapse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/city">

            <TextView
                android:id="@+id/temperature_tv"
                style="@style/TextViewTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="200dp"
                android:text="+23"/>

            <ImageView
                android:id="@+id/celcies_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/temperature_tv"
                android:layout_toEndOf="@+id/temperature_tv"
                app:srcCompat="@drawable/temperature_celsius"/>

            <narek.example.com.yandex_weather_app.ui._common.widget.WeatherImageView
                android:id="@+id/weatherImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temperature_tv"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/humidity_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/water_percent"
                android:layout_alignBottom="@+id/wind_speed_tv"
                android:layout_toEndOf="@+id/celcies_iv"/>


            <TextView
                android:id="@+id/humidity_tv"
                style="@style/TvWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:layout_alignBottom="@+id/humidity_iv"
                android:layout_toEndOf="@+id/humidity_iv"/>

            <TextView
                android:id="@+id/city_name_tv"
                style="@style/TvWind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/padding_8"
                android:layout_marginTop="@dimen/padding_28"
                android:paddingLeft="@dimen/padding_28"
                android:text="23"/>

            <TextView
                android:id="@+id/weather_update_date_tv"
                style="@style/TvWind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_name_tv"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/padding_28"
                android:paddingLeft="@dimen/padding_28"
                android:text="23"/>

            <TextView
                android:id="@+id/wind_speed_tv"
                style="@style/TvWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:layout_below="@+id/weatherImageView"
                android:layout_toStartOf="@+id/temperature_tv"
                android:layout_marginTop="41dp"/>

            <ImageView
                android:id="@+id/wind_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/wind_speed_tv"
                android:layout_toStartOf="@+id/wind_speed_tv"
                app:srcCompat="@drawable/weather_windy"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_forecast"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>