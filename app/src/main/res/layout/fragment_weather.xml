<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_city">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_weather"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|snap">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh"
                android:layout_width="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/relative_collapse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/city"
                app:layout_collapseMode="parallax">

                <TextView
                    android:id="@+id/temperature_tv"
                    style="@style/TextViewTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="115dp"
                    android:layout_marginStart="115dp"
                    android:text="+23"/>

                <ImageView
                    android:id="@+id/celcies_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="@dimen/padding_16"
                    android:layout_toEndOf="@+id/temperature_tv"
                    android:layout_toRightOf="@+id/temperature_tv"
                    app:srcCompat="@drawable/temperature_celsius"/>

                <narek.example.com.yandex_weather_app.ui._common.widget.WeatherImageView
                    android:id="@+id/weatherImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/temperature_tv"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/cloud"/>

                <ImageView
                    android:id="@+id/humidity_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/water_percent"
                    android:layout_alignBottom="@+id/wind_speed_tv"
                    android:layout_toLeftOf="@+id/humidity_tv"
                    android:layout_toStartOf="@+id/humidity_tv"
                    android:layout_alignTop="@+id/wind_iv"/>


                <TextView
                    android:id="@+id/humidity_tv"
                    style="@style/TvWind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:layout_alignBottom="@+id/humidity_iv"
                    android:layout_toRightOf="@+id/celcies_iv"
                    android:layout_toEndOf="@+id/celcies_iv"/>

                <TextView
                    android:id="@+id/city_name_tv"
                    style="@style/TvWind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:layout_above="@+id/weather_update_date_tv"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/weather_update_date_tv"
                    style="@style/TvWind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/wind_speed_tv"
                    style="@style/TvWind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:layout_below="@+id/weatherImageView"
                    android:layout_toLeftOf="@+id/weatherImageView"
                    android:layout_toStartOf="@+id/weatherImageView"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"/>

                <ImageView
                    android:id="@+id/wind_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/weather_windy"
                    android:layout_alignBottom="@+id/wind_speed_tv"
                    android:layout_toLeftOf="@+id/wind_speed_tv"
                    android:layout_toStartOf="@+id/wind_speed_tv"/>

            </RelativeLayout>
            </android.support.v4.widget.SwipeRefreshLayout>
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_below="@+id/app_bar_weather">
    </android.support.v7.widget.RecyclerView>


</android.support.design.widget.CoordinatorLayout>